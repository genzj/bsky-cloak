{
  "name": "bsky-cloak",
  "version": "1.0.2",
  "description": "A userscript hiding Bsky.App user displayname and handler",
  "module": "src/index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genzj/bksy-cloak.git"
  },
  "bugs": {
    "url": "https://github.com/genzj/bsky-cloak/issues"
  },
  "homepage": "https://github.com/genzj/bsky-cloak#readme",
  "userscriptHeader": {
    "@grant": [
      "unsafeWindow"
    ],
    "@match": [
      "http*://bsky.app/*"
    ],
    "@run-at": [
      "document-start"
    ]
  },
  "author": "genzj",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "bun-style-loader": "^0.4.0",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "type-fest": "^4.26.1",
    "winston": "^3.14.2",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "scripts": {
    "build": "bun build.ts",
    "build:dev": "bun build.ts --dev",
    "build:watch": "bun build.ts --dev --watch",
    "build:workflow": "bun build.ts --release-channel GitHubRelease",
    "clean": "rimraf ./dist/",
    "dev": "bun build.ts --dev --server --watch"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0"
  }
}
